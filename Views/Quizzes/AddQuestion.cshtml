@model oblig.ViewModels.CreateQuestionViewModel

<h2>Add Question</h2>

<form asp-action="AddQuestion" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" asp-for="QuizId" />

    <div class="mb-3">
        <label asp-for="QuestionText" class="form-label">Question</label>
        <input asp-for="QuestionText" class="form-control" />
        <span asp-validation-for="QuestionText" class="text-danger"></span>
    </div>

    <div class="mb-2 fw-bold">Answers (select the correct one)</div>

    <div class="d-flex align-items-center mb-2">
        <input type="radio" asp-for="CorrectAnswerIndex" class="form-check-input me-2" value="0" />
        <input asp-for="Answers[0]" class="form-control" placeholder="Answer 1" />
        <span asp-validation-for="Answers[0]" class="text-danger"></span>
    </div>

    <div class="d-flex align-items-center mb-2">
        <input type="radio" asp-for="CorrectAnswerIndex" class="form-check-input me-2" value="1" />
        <input asp-for="Answers[1]" class="form-control" placeholder="Answer 2" />
        <span asp-validation-for="Answers[1]" class="text-danger"></span>
    </div>

    <div class="d-flex align-items-center mb-2">
        <input type="radio" asp-for="CorrectAnswerIndex" class="form-check-input me-2" value="2" />
        <input asp-for="Answers[2]" class="form-control" placeholder="Answer 3" />
        <span asp-validation-for="Answers[2]" class="text-danger"></span>
    </div>

    <div class="d-flex align-items-center mb-2">
        <input type="radio" asp-for="CorrectAnswerIndex" class="form-check-input me-2" value="3" />
        <input asp-for="Answers[3]" class="form-control" placeholder="Answer 4" />
        <span asp-validation-for="Answers[3]" class="text-danger"></span>
    </div>

    <button type="submit" name="action" value="AddAnother" class="btn btn-secondary me-2">Add Another Question</button>
    <button type="submit" name="action" value="Finish" class="btn btn-primary">Finish Quiz</button>
</form>