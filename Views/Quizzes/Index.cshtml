@model IEnumerable<oblig.Models.Quiz>

@{
    ViewData["Title"] = "All Quizzes";
}

<h1>All Quizzes</h1>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var quiz in Model)
        {
            <tr>
                <td>@quiz.Title</td>
                <td>@quiz.Description</td>
                <td>
                    <a asp-action="Take" asp-route-id="@quiz.Id" class="btn btn-success">Play</a>
                    <a asp-action="Delete" asp-route-id="@quiz.Id" class="btn btn-danger">Delete</a>
                    <a asp-action="Edit" asp-route-id="@quiz.Id" class="btn btn-warning">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>